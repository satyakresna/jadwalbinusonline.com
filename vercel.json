{
    "version": 2,
    "env": {
      "MG_DOMAIN": "@mg-domain-binusonline",
      "MG_PRIVATE_KEY": "@mg-private-key"
    },
    "github": {
        "enabled": false
    },
    "builds": [
      {
        "src": "backend/index.js",
        "use": "@vercel/node"
      },
      {
        "src": "frontend/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "backend/index.js",
        "headers": {
            "Cache-Control": "public, s-maxage=60, stale-while-revalidate",
            "Access-Control-Allow-Origin": "*"
        }
      },
      {
        "src": "/",
        "dest": "frontend/index.html"
      },
      {
        "src": "/(.+)",
        "dest": "frontend/$1"
      }
    ]
}